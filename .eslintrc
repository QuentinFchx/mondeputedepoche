{
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [ "babel" ],
    "extends": "eslint:recommended",
    "rules": {
        /* Possible errors */
        "no-console": [2, {"allow": ["warn", "error"]}],
        "no-extra-parens": [2, "functions"],

        /* Best Practices */
        "array-callback-return": 2,
        "curly": [2, "multi-line"],
        "dot-notation": 2,
        "eqeqeq": 2,
        "no-eval": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-multi-spaces": 2,
        "no-self-compare": 2,
        "no-useless-concat": 2,
        "yoda": 2,

        /* Variables*/
        "no-use-before-define": [0, "nofunc"],

        /* Stylistic */
        "camelcase": [0, {"properties": "never"}],
        "comma-dangle": 2,
        "comma-spacing": 2,
        "comma-style": 2,
        "indent": [2, 4, {"SwitchCase": 1}],
        "key-spacing": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": 2,
        "semi-spacing": 2,

        /* ES6 */
        "object-shorthand": 0,
        "prefer-const": 0,
        "prefer-template": 0
    }
}
